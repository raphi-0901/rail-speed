{
  "name": "rail-speed",
  "version": "1.0.0",
  "description": "GNOME Shell extension showing current train speed.",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc && cp src/metadata.json dist/metadata.json && npm run build:schema",
    "build:schema": "glib-compile-schemas src/schemas/ && cp -r src/schemas dist/schemas",
    "build:full": "npm run build && npm run link:full",
    "rebuild:full": "npm run rebuild && npm run link:full",
    "link:full": "npm run link && npm run reload",
    "watch": "tsc -w",
    "log": "journalctl -f -o cat | grep rail-speed",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "link": "ln -sfn $(pwd)/dist ~/.local/share/gnome-shell/extensions/rail-speed@raphael-wirnsberger.at",
    "links": "echo $(pwd)/dist",
    "reset": "gnome-extensions reset rail-speed@raphael-wirnsberger.at",
    "enable": "gnome-extensions enable rail-speed@raphael-wirnsberger.at",
    "disable": "gnome-extensions disable rail-speed@raphael-wirnsberger.at",
    "reload": "gnome-extensions disable rail-speed@raphael-wirnsberger.at && gnome-extensions enable rail-speed@raphael-wirnsberger.at"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raphi-0901/rail-speed.git"
  },
  "keywords": [
    "gnome-shell",
    "extension",
    "train",
    "rail",
    "speed",
    "velocity",
    "typescript",
    "backoff"
  ],
  "author": "Raphael Wirnsberger",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/raphi-0901/rail-speed/issues"
  },
  "homepage": "https://github.com/raphi-0901/rail-speed#readme",
  "devDependencies": {
    "@girs/soup-3.0": "^3.6.5-4.0.0-beta.38",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@girs/gjs": "^4.0.0-beta.38",
    "@girs/gnome-shell": "^49.1.0"
  }
}
